<mvc:View
        controllerName="ris.ui.demo1.controller.App"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true">
    <App class="myAppDemoWT">
        <pages>
            <Page title="{i18n>homePageTitle}">
                <headerContent>
                    <Button
                            icon="sap-icon://hello-world"
                            press="onOpenDialog"/>
                </headerContent>
                <content>
                    <mvc:XMLView viewName="ris.ui.demo1.view.HelloPanel"/>
                    <mvc:XMLView viewName="ris.ui.demo1.view.InvoiceList"/>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
